/* Main */

.main .issue .category,
body.category .main .issue .number {
  display: none;
}

.main .issue .number,
body.category .main .issue .category {
  display: inline-block;
}

.main {
  min-height: 693px;
  padding-top: 18px;
}

/* Standard Issue */
.main .issue {
  position: relative;
  display: block;
  height: 270px;
  width: 100%; 
  text-decoration: none;
  text-shadow: 0 1px 0 #fff;
  border-bottom: 1px solid rgba(0, 0, 0, 0.1);
  box-shadow: 0 1px 0 #fff;
  margin-bottom: 17px;
  padding-bottom: 20px;
}

/* Social Buttons */
.main .issue .twitter,
.main .issue .facebook {
  position: absolute; 
  top: 23px; 
  width: 55px;
  overflow: hidden;
  z-index: 9;
}

.main .issue.featured .twitter,
.main .issue.featured .facebook {
  top: 3px;
}

.main .issue .twitter {
  right: 58px;
}

.main .issue .facebook {
  right: -3px;
  width: 52px;
}


.main .issue .text-wrapper:hover {
  color: #244D6D;
  cursor: pointer;
}

.main .issue .text-wrapper .link span {
	width:100%;
	height:100%;
	position:absolute;
	z-index:2;
	top:0px;
	left:0px;
}

.main .issue:hover .text-wrapper h3 {
  border-bottom-color: rgba(36, 77, 109, 0.3);
}

.main .issue .images {
  display: inline-block;
  position: relative;
  background: #F9F9F9;
  box-shadow: 0 0 1px rgba(0, 0, 0, 0.3);
  border-radius: 1px;
  padding: 4px;
  margin-top: 7px;
  z-index:2;
}

.main .issue.featured .images {
  padding: 0 4px;
}

.main .issue .images:before,
.main .issue .images:after {
  content: '';
  position: absolute;
  height: 24px;
  width: 430px;
  bottom: -24px;
  background: url(<%= asset_path 'paper-shadow_small.png' %>) no-repeat;
  opacity: 0.45;
}

.main .issue.featured .images:before,
.main .issue.featured .images:after {
  height: 24px;
  width: 430px;
  bottom: -24px;
  background: url(<%= asset_path 'paper-shadow.png' %>) no-repeat;
  opacity: 0.35;
}

.main .issue .images:before {
  left: -5px;
}

.main .issue .images:after {
  right: -5px;
  -webkit-transform: scaleX(-1);
  -moz-transform: scaleX(-1);
  -o-transform: scaleX(-1);
  transform: scaleX(-1);
}

.main .issue .image-wrapper {
  float: left; 
  width: 360px; 
  height: 250px; 
  overflow: hidden;
}

.main .issue .image-wrapper img {
  min-height: 250px; 
  min-width: 360px; 
}

.main .issue .image-wrapper img:hover {
  opacity: 0.8;
  -webkit-transition: opacity 150ms ease-in-out;
  cursor: pointer;
}

.main .issue .text-wrapper {
   float:right; 
   width: 590px; 
   max-height: 250px;
}

.main .issue .text-wrapper h3 {
  font-size: 24px;
  font-weight: bolder;
  font-family: 'Mate SC', serif;
  padding: 22px 0 7px 0;
  margin-bottom: 8px;
  border-bottom: 1px solid rgba(0, 0, 0, 0.2);
  box-shadow: 0 1px 0 #fff;
}

.main .issue.featured .text-wrapper h3 {
  padding-top: 0;
}

.main .issue:last-of-type {
  margin-bottom: 0;
  border-bottom: none;
  box-shadow: none;
}

.main .issue .text-wrapper h3 .title {
  font-size: 20px;
  font-style: italic;
  font-weight: normal;
  font-family: 'Mate SC', serif;
}

.main .issue .text-wrapper h3 .count {
  float: right;
  font-size: 12px;
  font-weight: 200;
  color: #999;
  line-height: 29px;
  font-family: 'Fjord One', serif;
  display: none;
}

.main .issue .text-wrapper p {
  font-size: 15px;
  line-height: 21px;
  font-family: 'Fjord One', serif;
}

/* Featured Issue */
.main .issue.featured {
  height: auto;
  min-height: 200px;
}
.main .issue.featured .text-wrapper {
  display: block;
  float: none;
  height: auto;
  width: auto;
}

.main .issue.featured .text-wrapper h3 {
  margin-bottom: 3px;
}

.main .issue.featured ul {
  float: left;
}

.main .issue.featured .image-wrapper {
  width: 118px;
  height: 200px;
  margin: 4px 4px 4px  0;
  float: left;
}

.main .issue.featured .image-wrapper:nth-child(8n) {
  margin-right: 0;  
}

.main .issue.featured .text-wrapper .description {
  display: none;
}

